<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>% of Category Subtotal</th>
      <th>Cost</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% expenses.each do |expense| %>
      <tr>
        <th scope="row"><%= expense.description %></th>
        <td><%= number_to_percentage(expense.category_percentage, precision: 0)%></td>
        <td><%= number_to_currency(expense.cost) %></td>
        <td><%=link_to "Delete Expense", expense_path(expense), :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
